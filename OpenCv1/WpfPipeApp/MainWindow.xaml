<Window x:Class="WpfPipeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPipeApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtBox" HorizontalAlignment="Left" Height="66" Margin="163,74,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="182" TextChanged="txtBox_TextChanged"/>
        <Button x:Name="btnConnectPipe" Content="Connect Pipe" HorizontalAlignment="Left" Margin="163,220,0,0" VerticalAlignment="Top" Width="182" RenderTransformOrigin="0.507,0.6" Click="btnConnectPipe_Click"/>
        <Button x:Name="btnDisconnectPipe" Content="Disconnect Pipe" HorizontalAlignment="Left" Margin="163,245,0,0" VerticalAlignment="Top" Width="182" RenderTransformOrigin="0.507,0.6" Click="btnDisconnectPipe_Click" Visibility="Hidden"/>

    </Grid>
</Window>
